---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Nasrullah</div>
    <div class="text-3xl py-3 font-bold">Fullstack Web Developer</div>
    <div class="py-2">
      <text class="text-lg">
        I am an experienced professional with over 10 years of experience in the
        IT field, specializing particularly in web programming.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://wa.me/628180960000" target="_blank">
        Let's connect!</a
      >
      <a class="btn btn-primary" href="/cv.pdf" target="_blank"> Download CV</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="CPNS Online"
    img="/img/cpnsonline.jpg"
    desc="Fullstack web developer using Vue.js, Express.js and Astro.js"
    url="https://cpnsonline.id"
    badge=""
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gemah Ripah Indonesia"
    img="/img/gemri.jpg"
    desc="Fullstack web developer using Codeigniter"
    url="https://gemri.id"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Duwa Bintang Sejahtera"
    img="/img/dbs.jpg"
    desc="Company profile using Astro.js"
    url="https://duwabintangsejahtera.com/"
    badge=""
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Mentorbox Indonesia"
    img="/img/mbid.jpg"
    desc="Company profile and Learning Management System using Laravel"
    url="https://mentorbox.id/"
    badge=""
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
